<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             x:Class="App1.demo">
    <ContentPage.Content>
        <StackLayout>
            <maps:Map x:Name="mapdemo" MapType="Street" IsShowingUser="True"  />
            <Button Text="Začni s potjo" Clicked="Button_Clicked" />
            <ListView x:Name="ja">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding langtitude}" /> 
                                <Label Text="{Binding longtitude}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>